{
  "compilerOptions": {
    "target": "es2015",
    "module": "node16",
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": ".",
    "paths": {
      "*": ["typings/*"]
    },
    "esModuleInterop": true,

    "skipLibCheck": true
  },
  "include": [
    "lib/**/*",
    "tests/**/*",
    "tools/**/*",
    "typings/eslint-plugin-vue/global.d.ts"
  ]
}
